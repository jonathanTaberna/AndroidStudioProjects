<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/preLoginCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".PreLoginActivity">

    <!--
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarPreLogin"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/AppTheme"
        android:elevation="4dp"
        />
    -->

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarPreLogin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSanLucas"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:background="@drawable/layout_boton_sanlucas"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/btnNeoclinica"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:background="@drawable/layout_boton_neoclinica"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="103dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSanatorioPrivado"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:background="@drawable/layout_boton_sanatorioprivado"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/btnOdontograssi"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:background="@drawable/layout_boton_odontograssi"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="103dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnResonanciaR4"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:background="@drawable/layout_boton_resonanciar4"
            android:text="Resonancia Rio Cuarto"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/btnHospitalComGralDeheza"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:background="@drawable/layout_boton_hospitalgraldeheza"
            android:text="Hospital de la Comunidad Gral Deheza"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="103dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnUrologico"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:background="@drawable/layout_boton_urologico"
            android:text="Urologico"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/btnClinicaPrivadaGralDeheza"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:background="@drawable/layout_boton_clinicaprivgraldeheza"
            android:text="ClinicaPrivadaGralDeheza"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="103dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnHS"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:text="HS Server (ip)"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="bottom"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="bottom|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="232dp"
                android:layout_height="36dp"
                android:text="@string/power_by"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hs_logo" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>