<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlElementoInternado"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_weight="1">
    <!--
    android:theme="@style/AppTheme"
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMotivoDiaNoTrabajo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:singleLine="true"
                android:text="MotivoDiaNoTrabajo"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tvProfesionalInternado"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Profesional" />

            <TextView
                android:id="@+id/tvMutualInternado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mutual" />

            <TextView
                android:id="@+id/tvMotivoInternado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tvMotivoDiaNoTrabajo"
                android:singleLine="true"
                android:text="Motivo" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/button_background" />
</RelativeLayout>